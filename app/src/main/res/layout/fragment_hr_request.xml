<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HrRequestFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/heading_hr_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_bold"
            android:textSize="24sp"
            android:gravity="center"
            android:padding="16dp"
            android:background="@color/rit"
            android:textColor="#fff"
            android:text="@string/hr_request_form"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/type_heading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:textColor="@color/rit"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_semibold"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/type_Spinner"
            app:layout_constraintBottom_toBottomOf="@id/type_Spinner" />

        <Spinner
            android:id="@+id/type_Spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/bg_spinner"
            android:padding="13dp"
            app:layout_constraintTop_toBottomOf="@id/heading_hr_TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/type_heading_TextView"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/name_heading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/staff_name"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/rit"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/type_Spinner"/>

        <TextView
            android:id="@+id/name_Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="32dp"
            android:textColor="#000"
            android:text="@string/kishore_theeraj"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/name_heading_TextView"
            app:layout_constraintTop_toTopOf="@id/name_heading_TextView"
            app:layout_constraintBottom_toBottomOf="@id/name_heading_TextView"/>

        <TextView
            android:id="@+id/staffid_heading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/staff_id"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/rit"
            android:textSize="16sp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_Text"/>

        <TextView
            android:id="@+id/staffid_Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:layout_marginStart="24dp"
            android:textColor="#000"
            android:text="@string/_123"
            app:layout_constraintStart_toEndOf="@id/staffid_heading_TextView"
            app:layout_constraintTop_toTopOf="@id/staffid_heading_TextView"
            app:layout_constraintBottom_toBottomOf="@id/staffid_heading_TextView"/>

        <TextView
            android:id="@+id/dept_heading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dept"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="@color/rit"
            android:textSize="16sp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@id/dept_Text"
            app:layout_constraintTop_toBottomOf="@id/name_Text"/>

        <TextView
            android:id="@+id/dept_Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:layout_marginEnd="32dp"
            android:textColor="#000"
            android:text="@string/cse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/dept_heading_TextView"
            app:layout_constraintBottom_toBottomOf="@id/dept_heading_TextView"/>

        <TextView
            android:id="@+id/designation_heading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/designation"
            android:textColor="@color/rit"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_semibold"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dept_heading_TextView" />

        <Spinner
            android:id="@+id/designation_Spinner"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/bg_spinner"
            android:padding="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/designation_heading_TextView"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:id="@+id/cardHolder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/designation_Spinner"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/permission_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/permission_date_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/date"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:textColor="@color/rit"
                        android:fontFamily="@font/raleway_semibold"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@id/permission_time_TextView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/permission_Date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingEnd="40dp"
                        android:background="@drawable/button_border"
                        app:layout_constraintEnd_toEndOf="@id/permission_date_TextView"
                        app:layout_constraintStart_toStartOf="@id/permission_date_TextView"
                        app:layout_constraintTop_toBottomOf="@id/permission_date_TextView"
                        tools:ignore="RtlSymmetry,SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/permission_time_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/start_time"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:textColor="@color/rit"
                        android:fontFamily="@font/raleway_semibold"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/permission_date_TextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/permission_Time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingEnd="40dp"
                        android:background="@drawable/button_border"
                        app:layout_constraintEnd_toEndOf="@id/permission_time_TextView"
                        app:layout_constraintStart_toStartOf="@id/permission_time_TextView"
                        app:layout_constraintTop_toBottomOf="@id/permission_time_TextView"
                        tools:ignore="RtlSymmetry,SpeakableTextPresentCheck" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_baseline_access_time_24"
                        app:layout_constraintBottom_toBottomOf="@+id/permission_Time"
                        app:layout_constraintEnd_toEndOf="@id/permission_Time"
                        app:layout_constraintTop_toTopOf="@id/permission_Time"
                        tools:ignore="ContentDescription,ImageContrastCheck" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calendar"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/permission_Date"
                        app:layout_constraintEnd_toEndOf="@id/permission_Date"
                        app:layout_constraintTop_toTopOf="@id/permission_Date"
                        tools:ignore="ContentDescription,ImageContrastCheck"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/leave_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Switch
                        android:id="@+id/halfday_switch"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/raleway_semibold"
                        android:padding="8dp"
                        android:text="@string/half_day_leave"
                        android:textColor="@color/rit"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />

                    <TextView
                        android:id="@+id/leave_fromdate_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/from"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:textColor="@color/rit"
                        android:fontFamily="@font/raleway_semibold"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@id/leave_to_date_TextView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/halfday_switch"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/leave_from_Date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingEnd="40dp"
                        android:background="@drawable/button_border"
                        app:layout_constraintEnd_toEndOf="@id/leave_fromdate_TextView"
                        app:layout_constraintStart_toStartOf="@id/leave_fromdate_TextView"
                        app:layout_constraintTop_toBottomOf="@id/leave_fromdate_TextView"
                        tools:ignore="RtlSymmetry,SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/leave_to_date_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/to"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:textColor="@color/rit"
                        android:fontFamily="@font/raleway_semibold"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/leave_fromdate_TextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/halfday_switch"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/leave_to_Date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingEnd="40dp"
                        android:background="@drawable/button_border"
                        app:layout_constraintEnd_toEndOf="@id/leave_to_date_TextView"
                        app:layout_constraintStart_toStartOf="@id/leave_to_date_TextView"
                        app:layout_constraintTop_toBottomOf="@id/leave_to_date_TextView"
                        tools:ignore="RtlSymmetry,SpeakableTextPresentCheck" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/calendar"
                        app:layout_constraintBottom_toBottomOf="@+id/leave_to_Date"
                        app:layout_constraintEnd_toEndOf="@id/leave_to_Date"
                        app:layout_constraintTop_toTopOf="@id/leave_to_Date"
                        tools:ignore="ContentDescription,ImageContrastCheck" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calendar"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/leave_from_Date"
                        app:layout_constraintEnd_toEndOf="@id/leave_from_Date"
                        app:layout_constraintTop_toTopOf="@id/leave_from_Date"
                        tools:ignore="ContentDescription,ImageContrastCheck"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/od_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/od_fromdate_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/from"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:textColor="@color/rit"
                        android:fontFamily="@font/raleway_semibold"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toStartOf="@id/od_to_date_TextView"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/od_from_Date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingEnd="40dp"
                        android:background="@drawable/button_border"
                        app:layout_constraintEnd_toEndOf="@id/od_fromdate_TextView"
                        app:layout_constraintStart_toStartOf="@id/od_fromdate_TextView"
                        app:layout_constraintTop_toBottomOf="@id/od_fromdate_TextView"
                        tools:ignore="RtlSymmetry,SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/od_to_date_TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/to"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:textColor="@color/rit"
                        android:fontFamily="@font/raleway_semibold"
                        android:layout_marginEnd="32dp"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/od_fromdate_TextView"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="RtlSymmetry" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/od_to_Date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:paddingEnd="40dp"
                        android:background="@drawable/button_border"
                        app:layout_constraintEnd_toEndOf="@id/od_to_date_TextView"
                        app:layout_constraintStart_toStartOf="@id/od_to_date_TextView"
                        app:layout_constraintTop_toBottomOf="@id/od_to_date_TextView"
                        tools:ignore="RtlSymmetry,SpeakableTextPresentCheck" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/calendar"
                        app:layout_constraintBottom_toBottomOf="@+id/od_to_Date"
                        app:layout_constraintEnd_toEndOf="@id/od_to_Date"
                        app:layout_constraintTop_toTopOf="@id/od_to_Date"
                        tools:ignore="ContentDescription,ImageContrastCheck" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/calendar"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/od_from_Date"
                        app:layout_constraintEnd_toEndOf="@id/od_from_Date"
                        app:layout_constraintTop_toTopOf="@id/od_from_Date"
                        tools:ignore="ContentDescription,ImageContrastCheck"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/reason_heading_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reason"
            android:textColor="@color/rit"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_semibold"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardHolder" />

        <EditText
            android:id="@+id/reason_TextMultiLine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:gravity="start|top"
            android:background="@drawable/button_border"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:lines="5"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reason_heading_TextView"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:letterSpacing="0.1"
            android:fontFamily="@font/raleway_semibold"
            android:textColor="#fff"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_background"
            app:layout_constraintTop_toBottomOf="@id/reason_TextMultiLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="36dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/designation_Spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_Text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>